<% include partials/header %>
<div class="fillup">
    <form class="ui inverted form" action="/campgrounds" method="POST">
      <div class="field">
        <h1 class="form-title">ADD NEW CAMPGROUND</h1>
      </div>
      <div class="field">
        <input type="text" name="campground[title]" placeholder="Title">
      </div>
      <div class="field">
        <input type="text" name="campground[image]" placeholder="Image">
      </div>
      <div class="field">
        <textarea rows="5" name="campground[description]" placeholder="Description"></textarea>
      </div>
      <button class="ui button submit-button" type="submit">Add Campground</button>
    </form>
</div>

