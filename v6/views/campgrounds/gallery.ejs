<% include ../partials/header %>
    <div id="jumbotron" class="ui grid container">
      <div class="row">
        <div class="column">
          <div id="msg" class="ui message">
            <h1 id="ui-head" class="ui header">Welcome to YelpCamp</h1>
              <a class="ui primary button" id="ui-link" href="/campgrounds/new">Add new Campground</a>
          </div>
        </div>
      </div>
    </div>

    <div class="ui four column grid container">
      <% campgrounds.forEach(function(campground){ %>
        <div class="column">
          <div id="thumb" class="ui segment contain">
            <img class="imageshow" src=" <%= campground.image %> ">
            <a class="ui primary button more" href="/campgrounds/<%=campground._id%>">More Info</a>
            <p id="camp-name"> <%= campground.title %> </p>
          </div>
        </div>
      <% }) %>
    </div>
<% include ../partials/footer %>
